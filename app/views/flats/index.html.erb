<div class="container">
  <h1>All our flats</h1>
  <div class="cards-container">
    <% @flats.each do |flat| %>
      <div class="card">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <p><%= flat.number_of_guests %></p>
        <p><%= flat.price_per_night %></p>
      </div>
    <% end %>
  </div>
</div>
